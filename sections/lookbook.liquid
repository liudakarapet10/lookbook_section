
{{ 'lookbook-modal.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>


<div class="section-{{ section.id }}">
  <div>
    {% if  section.settings.image != blank %}
      <div>
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{section.settings.image.alt}}">
      </div>
    {% endif %}
    <div>
      <h2>{{ section.settings.description }}</h2>
    </div>
  </div>
  <div>

    <button js-modal-trigger>
      {{ 'sections.lookbook_section.shop_btn' | t }}
    </button>

    <div js-modal class="modal">
      <div js-modal-content class="modal__inner">
        <div class="modal__body">
          <div>
            {% if  section.settings.image != blank %}
              <div>
                <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{section.settings.image.alt}}">
              </div>
            {% endif %}
          </div>
          <div>
            {% for block in section.blocks %}
              {% assign product = block.settings.product %}
  
              {%- if product != blank -%}
                {% render 'product-card',product: product, block: block %}
              {%- endif -%}  
          
            {% endfor %}
          </div>
        </div>
        <button js-modal-close class="modal__close">
          {%- render 'icon-cross' -%}
        </button>
      </div>
    </div>
  </div>
</div>


<script src="{{ 'product_card.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'lookbook-modal.js' | asset_url }}" defer="defer"></script>



{% schema %}
  {
    "name": "Lookbook",
    "settings": [
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "label": "Space before section",
        "default": 16
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "label": "Space after section",
        "default": 16
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "color",
        "id": "description_color",
        "label": "Description color",
        "default": "#000000"
      }, 
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#000000"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "Product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Lookbook"
      }
    ]
  }
{% endschema %}